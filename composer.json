{
    "name": "stefano/stefano-image",
    "description": "Image processing",
    "version": "0.2.1",
    "license": "BSD-3-Clause",
    "keywords": [
        "image",
        "resize",
        "pad",
        "adaptive resize",
        "watermark"
    ],
    "support": {
        "source": "https://github.com/bartko-s/stefano-image",
        "issues": "https://github.com/bartko-s/stefano-image/issues"
    },
    "homepage": "https://github.com/bartko-s/stefano-image",
    "authors": [
        {
            "name": "Å tefan Bartko"
        }
    ],
    "require": {
        "php": ">=7.1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "mockery/mockery": "^1.2.0",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^8.1"
    },
    "autoload": {
        "psr-0": {
            "StefanoImage\\": "src/"
        },
        "classmap": [
            "./src/"
        ]
    },
    "autoload-dev": {
        "psr-0": {
            "StefanoImageTest\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit --configuration tests/phpunit.xml --coverage-clover tests/temp/clover.xml",
        "cs-check": "php-cs-fixer --version && php-cs-fixer fix -v --diff --dry-run --allow-risky no",
        "cs-fix": "php-cs-fixer fix -v --allow-risky no"
    }
}
