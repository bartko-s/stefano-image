<?xml version="1.0"?>
<phpunit bootstrap="./bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Stefano Image Tests">
            <directory>./StefanoImageTest</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">../src/</directory>    
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./temp/codeCoverage" charset="UTF-8"
            highlight="true" lowUpperBound="50" highLowerBound="90"/>
        <log type="coverage-clover" target="./temp/logs/clover.xml"/>
    </logging>
    <listeners>
        <listener class="\Mockery\Adapter\Phpunit\TestListener"></listener>
    </listeners>
</phpunit>
